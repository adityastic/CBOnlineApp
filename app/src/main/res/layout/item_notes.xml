<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="java.lang.Integer" />

        <variable
            name="viewModel"
            type="com.codingblocks.cbonlineapp.viewmodels.VideoPlayerViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.onNoteClick(position)}"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bodyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:enabled="@{viewModel.notesObservables.bodyTvEnabled[position]}"
            android:inputType="none"
            android:text="@{viewModel.getNoteText(position)}"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:model="@{viewModel}"
            app:pos="@{position}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contentTitleTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@{viewModel.getNoteContentTitle(position)}"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@{viewModel.getNoteTime(position)}"
                android:textAlignment="textEnd"
                android:textColor="@color/green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/deleteTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:onClick="@{() -> viewModel.setOnDeleteClick(position)}"
                android:text="@{viewModel.notesObservables.deleteTvText[position]}"
                android:textColor="@color/salmon"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/editTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:onClick="@{() -> viewModel.setOnEditClick(position)}"
                android:text="@{viewModel.notesObservables.editTvText[position]}"
                android:textColor="@color/salmon"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</layout>
